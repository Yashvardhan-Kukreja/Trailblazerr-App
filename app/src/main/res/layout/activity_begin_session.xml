<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.BeginSessionActivity">

    <ImageView
        android:id="@+id/home_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#00000000"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:tint="#3b3b3b"
        android:src="@drawable/home_symbol" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">


            <ImageView
                android:id="@+id/speaker_symbol"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:src="@drawable/speaker_symbol"
                android:tint="#9e9e9e" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam Myoho Renge Kyo"
                android:fontFamily="@font/lato_black"
                android:textSize="18sp"
                android:id="@+id/title"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#882e2e2e"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn on your speakers"
                android:id="@+id/sub_title"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_thin"
                android:textColor="#88838383"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/time_symbol"
                    android:tint="#2e2e2e"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="#2e2e2e"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_black"
                    android:id="@+id/chronometer_hours"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text=" H  "
                        android:textColor="#2e2e2e"
                        android:fontFamily="@font/lato_light"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:fontFamily="@font/lato_black"
                    android:textColor="#2e2e2e"
                    android:textSize="20sp"
                    android:id="@+id/chronometer_mins"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text=" M  "
                        android:textColor="#2e2e2e"
                        android:fontFamily="@font/lato_light"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:fontFamily="@font/lato_black"
                    android:textColor="#2e2e2e"
                    android:textSize="20sp"
                    android:id="@+id/chronometer_secs"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text=" S"
                        android:textColor="#2e2e2e"
                        android:fontFamily="@font/lato_light"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="75dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#757575"
                android:id="@+id/start_btn_text"
                android:text="Start"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/lato_bold"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:src="@drawable/play_symbol"
                android:tint="#757575"
                android:id="@+id/start_btn"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="75dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#757575"
                android:id="@+id/pause_btn_text"
                android:text="Pause"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/lato_bold"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:src="@drawable/pause_symbol"
                android:tint="#757575"
                android:id="@+id/pause_btn"/>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="1"
        android:id="@+id/play_to_begin"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/apple_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play to begin"
            android:id="@+id/play_to_begin_txt"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:fontFamily="@font/lato_black" />

    </RelativeLayout>

</LinearLayout>